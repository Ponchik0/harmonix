{
  "name": "harmonix",
  "version": "1.0.0",
  "description": "Next-Generation Multi-Platform Music Application",
  "author": "Harmonix Team",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/generate-icon.js && tsc -p tsconfig.build.json && vite build && electron-builder",
    "build:win": "node scripts/generate-icon.js && tsc -p tsconfig.build.json && vite build && electron-builder --win",
    "build:installer": "node scripts/generate-icon.js && tsc -p tsconfig.build.json && vite build && electron-builder --win nsis",
    "build:icon": "node scripts/generate-icon.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "@xhayper/discord-rpc": "^1.3.0",
    "clsx": "^2.1.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3",
    "framer-motion": "^10.18.0",
    "hls.js": "^1.6.15",
    "howler": "^2.2.4",
    "idb": "^7.1.1",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "ws": "^8.19.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/howler": "^2.2.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "fast-check": "^3.15.0",
    "jsdom": "^23.0.1",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "terser": "^5.36.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.1.3"
  },
  "build": {
    "appId": "com.harmonix.app",
    "productName": "Harmonix",
    "copyright": "Copyright Â© 2025 Harmonix",
    "asar": true,
    "asarUnpack": [],
    "compression": "maximum",
    "afterPack": "build/afterPack.js",
    "publish": {
      "provider": "github",
      "owner": "Ponchik0",
      "repo": "harmonix"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!dist/**/*.map",
      "!dist-electron/**/*.map",
      "!**/*.md",
      "!**/*.txt",
      "!**/test/**",
      "!**/tests/**",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "build/icon-light.ico",
        "to": "icon-light.ico"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "executableName": "Harmonix",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": true,
      "publisherName": "Harmonix",
      "requestedExecutionLevel": "asInvoker",
      "extraFiles": [
        {
          "from": "node_modules/electron/dist/locales",
          "to": "locales",
          "filter": [
            "ru.pak",
            "en-US.pak"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Harmonix",
      "license": "LICENSE.txt",
      "installerLanguages": "ru_RU",
      "language": "1049",
      "perMachine": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "installerHeader": "build/icon.ico",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/icon.ico",
      "include": "build/installer.nsh",
      "differentialPackage": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    }
  }
}
